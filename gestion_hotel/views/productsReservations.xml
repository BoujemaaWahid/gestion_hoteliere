<odoo>
    <record id="hotel_products_reservations_tree_view" model="ir.ui.view">
        <field name="name">hotel.products.reservations.tree.view</field>
        <field name="model">hotel.products.reservations</field>
        <field name="arch" type="xml">
            <tree string="Products">
                <field name="product"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

        <record id="hotel_products_reservations_form_view" model="ir.ui.view">
            <field name="name">hotel.products.reservations.form.view</field>
            <field name="model">hotel.products.reservations</field>
            <field name="arch" type="xml">
                <form string="Product">
                    <sheet>
                        <group>
                                <field name="product"/>
                                <field name="quantity"/>
                                <field name="reservation" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>